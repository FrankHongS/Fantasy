<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.frankhon.fantasymusic">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
            android:name=".application.Fantasy"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="AllowBackup,GoogleAppIndexingWarning"
            tools:targetApi="n">
        <activity
                android:name=".activities.MainActivity"
                android:exported="true"
                android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".activities.about.AboutActivity"
                android:theme="@style/CustomActionBar" />

        <service
                android:name=".media.AudioPlayerService"
                android:exported="false"
                android:process=":music.player">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </service>

        <receiver
                android:name=".receivers.MusicInfoReceiver"
                android:exported="false">
            <intent-filter>
                <action android:name="com.frankhon.fantasy.MUSIC_INFO" />
            </intent-filter>
        </receiver>
        <receiver
                android:name=".receivers.MusicProgressReceiver"
                android:exported="false">
            <intent-filter>
                <action android:name="com.frankhon.fantasy.MUSIC_PROGRESS" />
            </intent-filter>
        </receiver>
        <receiver
                android:name=".receivers.MusicPlayerConfigurationReceiver"
                android:exported="false">
            <intent-filter>
                <action android:name="com.frankhon.fantasy.MUSIC_PLAYER_CONFIGURATION" />
            </intent-filter>
        </receiver>
        <receiver
                android:name="androidx.media.session.MediaButtonReceiver"
                android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
    </application>

</manifest>