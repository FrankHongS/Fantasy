<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   app:cardElevation="@dimen/default_card_elevation">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_panel_height">

            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/iv_song_bottom_pic"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
                    tools:ignore="ContentDescription"/>
            <TextView
                    tools:text="TextViewTextViewTextViewTextViewTextViewTextViewTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_bottom_song_name"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="14dp"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/iv_song_bottom_pic"
                    app:layout_constraintEnd_toStartOf="@+id/include"
            />
            <TextView
                    tools:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/tv_bottom_artist_name"
                    app:layout_constraintStart_toStartOf="@+id/tv_bottom_song_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_bottom_song_name" android:layout_marginTop="4dp"/>

            <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/layout_song_control"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp" android:id="@+id/include"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:text="hello world !"
                  android:gravity="center"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>